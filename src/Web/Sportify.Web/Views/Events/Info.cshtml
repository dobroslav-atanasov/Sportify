@model Sportify.Data.ViewModels.Events.EventViewModel

@{
    ViewData["Title"] = "Info";
}

<br />

<h1 class="text-center">@Model.EventName</h1>

<hr style="height: 1px; background-color:#DF691A" />

<div class="row">
    <div class="col-md-4">
        <h4 class="text-right"><strong>Event:</strong></h4>
    </div>
    <div class="col-md-8">
        <h4>@Model.EventName</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h4 class="text-right"><strong>Date:</strong></h4>
    </div>
    <div class="col-md-8">
        <h4>@Model.Date</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h4 class="text-right"><strong>Time:</strong></h4>
    </div>
    <div class="col-md-8">
        <h4>@Model.Time</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h4 class="text-right"><strong>Discipline:</strong></h4>
    </div>
    <div class="col-md-8">
        <h4>@Model.Discipline</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h4 class="text-right"><strong>Sport:</strong></h4>
    </div>
    <div class="col-md-8">
        <h4>@Model.Sport</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h4 class="text-right"><strong>Venue:</strong></h4>
    </div>
    <div class="col-md-8">
        <h4>@Model.Venue</h4>
    </div>
</div>
<div>
    <img src="@Model.ImageVenueUrl" class="rounded mx-auto d-block" alt="@Model.Venue" width="500">
</div>
<div class="row">
    <div class="col-md-4">
        <h4 class="text-right"><strong>Town:</strong></h4>
    </div>
    <div class="col-md-8">
        <h4>@Model.Town</h4>
    </div>
</div>

<div class="text-center">
    @if ((bool)this.ViewData["Participate"] == false)
    {
        <a asp-area="" asp-controller="Events" asp-action="Join" asp-route-id="@Model.Id" class="btn btn-success btn-lg">Join</a>
    }
    else
    {
        <a asp-area="" asp-controller="Events" asp-action="Leave" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">Leave</a>
    }
</div>

<div class="text-center">
    <a asp-area="" asp-controller="Events" asp-action="SearchEvents">Back to events</a>
</div>