@using Sportify.Constants
@using Sportify.Data.ViewModels.Disciplines
@using Sportify.Data.ViewModels.Organizations
@using Sportify.Data.ViewModels.Towns
@using Sportify.Data.ViewModels.Venues

@model Sportify.Data.ViewModels.Events.CreateEventViewModel

@{
    ViewData["Title"] = "Create";
}

<br />

<h1 class="text-center text-primary">Create Event</h1>

<br/>

<div class="row text-center">
    <div class="col-md-4 offset-md-4">
        <form asp-area="" asp-controller="Events" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    </div>
                    <input asp-for="EventName" class="form-control" placeholder="Event Name" />
                </div>
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-clock"></i></span>
                    </div>
                    <input asp-for="Date" class="form-control"/>
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                    </div>
                    <select asp-for="OrganizationId" class="form-control">
                        <option selected>Select Organization</option>
                        @foreach (var organization in this.ViewData[GlobalConstants.Organizations] as IEnumerable<OrganizationViewModel>)
                        {
                            <option value="@organization.Id">@organization.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-table-tennis"></i></span>
                    </div>
                    <select asp-for="DisciplineId" class="form-control">
                        <option selected>Select Discipline</option>
                        @foreach (var discipline in this.ViewData[GlobalConstants.Disciplines] as IEnumerable<DisciplineViewModel>)
                        {
                            <option value="@discipline.Id">@discipline.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="DisciplineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueId" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-landmark"></i></span>
                    </div>
                    <select asp-for="VenueId" class="form-control">
                        <option selected>Select Venue</option>
                        @foreach (var venue in this.ViewData[GlobalConstants.Venues] as IEnumerable<VenueViewModel>)
                        {
                            <option value="@venue.Id">@venue.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfParticipants" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-users"></i></span>
                    </div>
                    <input asp-for="NumberOfParticipants" class="form-control" placeholder="Number of participants" />
                </div>
                <span asp-validation-for="NumberOfParticipants" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create Event" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>