@using Microsoft.AspNetCore.Identity
@using Sportify.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="collapse navbar-collapse" id="navbarResponsive">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </li>
    </ul>

    @if (SignInManager.IsSignedIn(User))
    {
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="SignOut">Sign Out</a>
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="CreateAccount">Create Account</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="SignIn">Sign In</a>
            </li>
        </ul>
    }
</div>