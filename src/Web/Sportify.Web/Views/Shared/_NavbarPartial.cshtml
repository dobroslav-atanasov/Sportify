@using Microsoft.AspNetCore.Identity
@using Sportify.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="collapse navbar-collapse" id="navbarResponsive">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
        </li>
    </ul>

    @if (SignInManager.IsSignedIn(User))
    {
        if (this.User.IsInRole("Administrator"))
        {
            <partial name="_NavbarAdministratorPartial" />
        }
        else
        {
            <ul class="nav navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="Profile"><i class="fas fa-user-edit"></i> Hello @UserManager.GetUserName(User)!</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="SignOut"><i class="fas fa-user-slash"></i> Sign Out</a>
                </li>
            </ul>
        }
    }
    else
    {
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="CreateAccount"><i class="fas fa-user-plus"></i> Create Account</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="SignIn"><i class="fas fa-user"></i> Sign In</a>
            </li>
        </ul>
    }
</div>