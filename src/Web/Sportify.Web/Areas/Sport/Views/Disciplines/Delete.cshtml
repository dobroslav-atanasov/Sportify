@model Sportify.Data.ViewModels.Disciplines.DisciplineViewModel

@{
    ViewData["Title"] = "Delete Discipline";
}

<br />

<h1 class="text-center text-primary">Delete</h1>

<h2 class="text-danger text-center">Are you sure you want to delete @Model.Name?</h2>

<br/>

<div class="row text-center">
    <div class="col-md-4 offset-md-4 text-center">
        <form asp-area="Sport" asp-controller="Disciplines" asp-action="Delete" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-city"></i></span>
                    </div>
                    <input asp-for="Name" class="form-control" readonly style="background-color: gray" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-font"></i></span>
                    </div>
                    <textarea asp-for="Description" class="form-control" rows="10" readonly style="background-color: gray"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sport" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-futbol"></i></span>
                    </div>
                    <input asp-for="Sport" class="form-control" readonly style="background-color: gray" />
                </div>
                <span asp-validation-for="Sport" class="text-danger"></span>
            </div>
            <br/>
            <input type="submit" value="Delete Town" class="btn btn-danger" />
        </form>
    </div>
</div>

<br />

<div class="text-center">
    <a asp-area="Sport" asp-controller="Disciplines" asp-action="All">Back to all</a>
</div>