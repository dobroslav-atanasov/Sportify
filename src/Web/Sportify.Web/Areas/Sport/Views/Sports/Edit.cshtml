@using Sportify.Constants

@model Sportify.Data.ViewModels.Sports.SportViewModel

@{
    ViewData["Title"] = "Edit Sport";
}

<br />

<h1 class="text-center text-primary">Edit</h1>

@if (this.ViewData.ContainsKey(GlobalConstants.Error))
{
    <div class="col-md-6 offset-3 alert  alert-danger text-center">
        <strong>@this.ViewData[GlobalConstants.Error]</strong>
    </div>
}
@if (this.ViewData.ContainsKey(GlobalConstants.Message))
{
    <div class="col-md-6 offset-3 alert  alert-success text-center">
        <strong>@this.ViewData[GlobalConstants.Message]</strong>
    </div>
}

<br/>

<div class="row text-center">
    <div class="col-md-4 offset-md-4 text-center">
        <form asp-area="Sport" asp-controller="Sports" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-futbol"></i></span>
                    </div>
                    <input asp-for="Name" class="form-control" placeholder="Sport Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-font"></i></span>
                    </div>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageSportUrl" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                    </div>
                    <input asp-for="ImageSportUrl" class="form-control" placeholder="Sport Image Url" />
                </div>
                <span asp-validation-for="ImageSportUrl" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Update Sport" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div class="text-center">
    <a asp-area="Sport" asp-controller="Sports" asp-action="All">Back to all</a>
</div>