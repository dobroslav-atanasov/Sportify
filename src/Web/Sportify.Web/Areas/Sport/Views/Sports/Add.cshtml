@using Sportify.Web.Constants

@model Sportify.Data.ViewModels.Sports.AddSportViewModel

@{
    ViewData["Title"] = "Add";
}

<br/>

<h1 class="text-center">Add Sport</h1>

<hr />

<div class="row text-center">
    <div class="col-md-4 offset-md-4">
        <form asp-area="@Area.Sport" asp-controller="@Controllers.Sports" asp-action="@Actions.SportsAdd" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-futbol"></i></span>
                    </div>
                    <input asp-for="Name" class="form-control" placeholder="Sport Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-font"></i></span>
                    </div>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageSportUrl" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                    </div>
                    <input asp-for="ImageSportUrl" class="form-control" placeholder="Sport Image Url" />
                </div>
                <span asp-validation-for="ImageSportUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Sport" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-area="@Area.Sport" asp-controller="@Controllers.Sports" asp-action="@Actions.SportsAll">Back to sports list</a>
</div>