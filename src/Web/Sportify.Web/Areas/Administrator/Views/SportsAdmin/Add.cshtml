@model Sportify.Data.ViewModels.Sports.AddSportViewModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<h4>AddSportViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Administrator" asp-controller="SportsAdmin" asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageSportUrl" class="control-label"></label>
                <input asp-for="ImageSportUrl" class="form-control" />
                <span asp-validation-for="ImageSportUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
