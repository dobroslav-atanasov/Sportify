@using Sportify.Data.ViewModels.Countries
@using Sportify.Constants

@model Sportify.Data.ViewModels.Towns.TownViewModel

@{
    ViewData["Title"] = "Edit Town";
}

<br />

<h1 class="text-center text-primary">Edit</h1>

@if (this.ViewData.ContainsKey(GlobalConstants.Error))
{
    <div class="col-md-6 offset-3 alert alert-dismissible alert-danger text-center">
        <strong>@this.ViewData[GlobalConstants.Error]</strong>
    </div>
}
@if (this.ViewData.ContainsKey(GlobalConstants.Message))
{
    <div class="col-md-6 offset-3 alert alert-dismissible alert-success text-center">
        <strong>@this.ViewData[GlobalConstants.Message]</strong>
    </div>
}

<br/>

<div class="row text-center">
    <div class="col-md-4 offset-md-4 text-center">
        <form asp-area="Administrator" asp-controller="Towns" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-city"></i></span>
                    </div>
                    <input asp-for="Name" class="form-control" placeholder="Town Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-globe"></i></span>
                    </div>
                    <select asp-for="CountryId" class="form-control">
                        <option selected>Select Country</option>
                        @foreach (var name in this.ViewData[GlobalConstants.Countries] as IEnumerable<CountrySelectViewModel>)
                        {
                            <option value="@name.Id">@name.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Update Town" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div class="text-center">
    <a asp-area="Administrator" asp-controller="Towns" asp-action="All">Back to all</a>
</div>
